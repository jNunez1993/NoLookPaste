{
  "manifest_version": 2,
 
  "name": "NoLookPaste",
  "description": "This extension will allow a user to copy and paste easier",
  "version": "1.0", 
  "commands":{
    "CopyPaste":{
    "suggested_key":{
      "default":"Ctrl+V",
      "mac":"Command+V"
    },

    "description": "CopyPaste"
    }
    },
  "app":{
     "background":{
   "scripts": ["js/vendor/angular.min.js","js/app.js","js/MainController.js"],
   "persistent":false
   }
  },
  "icons":{
    "128": "icon.png"
   },
  "permissions": [
  "clipboardRead",
  "clipboardWrite",
   "fileSystem", 
   {"fileSystem": ["write"]}, 
   {"fileSystem": ["write", "retainEntries", "directory"]} 
   ]
}
